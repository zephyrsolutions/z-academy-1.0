<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Z-ACCADEMY</title>
</head>
<body>
    <h1>Edit Issued Book</h1>
    <form action="/library/editIssuedBook/<%= issuedBook._id %>?_method=PUT" method="POST">
        <label>Student Name</label>
        <select name="student">
            <% student.forEach(s => { %>
                <option value="<%= s._id %>"><%= s.studentName %></option>
            <% }) %>
        </select>
        <label>Book Name</label>
        <select name="book">
            <% book.forEach(b => { %>
                <option value="<%= b._id %>"><%= b.bookName %></option>
            <% }) %>
        </select>
        <label>Issues Date</label>
        <input type="date" name="issuesDate" value="<%= issuedBook.issuesDate %>">
        <label>Return Date</label>
        <input type="text" name="returnDate" value="<%= issuedBook.returnDate %>">
        <label>Return Status</label>
        <input type="text" name="returnStatus" value="<%= issuedBook.returnStatus %>">
        <label>Fine</label>
        <input type="text" name="fine" value="<%= issuedBook.fine %>">
        <button type="submit">Submit</button>
    </form>
</body>
</html>