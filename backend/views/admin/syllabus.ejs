<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Z-ACADEMY</title>

    <!-- bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <h1>Syllabus Route</h1>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#courseModal">
        Add Syllabus
    </button>
    
    <!-- Modal -->
    <div class="modal fade" id="courseModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="courseModalLabel">Add Syllabus</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

            <!-- Add Course Form -->
            <form action="/admin/addSyllabus" method="POST" enctype="multipart/form-data">
                <p>
                    <label> Course Name: </label>
                    <select name="course">
                        <option> Select Course </option>
                        <% course.forEach(c => { %>
                            <option value="<%= c._id %>"> <%= c.courseName %></option>
                        <% }) %>
                    </select>
                </p>
                <p>
                    <label> Upload Syllabus: </label>
                    <input type="file" name="image" value="">
                </p>
                <p>
                    <button type="submit">Submit</button>
                </p>
            </form>

            </div>
        </div>
        </div>
    </div>

    <h1> View Course And Syllabus </h1>
    <% if(!syllabus){ %>
        <p> Something Went Wrong </p>
    <% }else { %>
        <% syllabusArr = Object.values(syllabus) %>
            <table>
                <thead>
                    <tr>
                        <th> Course </th>
                        <th> Syllabus </th>
                    </tr>
                </thead>
                <% syllabusArr.forEach(s => { %>
                <tbody>
                    <tr>
                        <td>
                            <button><%= s.course.courseName %></button>
                        </td>
                        <td>
                            <img src="<%= s.syllabusImage %>" height="50" width="100">
                        </td>
                    </tr>
                </tbody>
                <% }) %>
            </table>
    <% } %>

</body>
</html>